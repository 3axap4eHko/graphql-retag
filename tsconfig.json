{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "lib": [
      "dom",
      "esnext"
    ],
    "declaration": true,
    "rootDir": "src",
    "outDir": "build"
  },
  "exclude": [
    "node_modules",
    "src/**/__tests__"
  ]
}
